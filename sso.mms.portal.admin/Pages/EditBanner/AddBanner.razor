        background: #334396;
    }

    .img-upload {
        border-radius: 8px;
        width: inherit;
        height: 96%;
    }

    .col-bg {
        border-radius: 8px;
        background: #F5F3F7;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.05);
    }

    .div-file-input {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        border-radius: 10px;
        width: 100%;
        height: 538px;
    }

    .txt-upload {
        color: #334396;
        font-size: 20px;
        font-family: Noto Sans Thai;
        font-weight: 500;
        line-height: 150%;
    }

    .btn-edit {
        background: #334396;
        border-radius: 4px;
        font-family: 'Noto Sans Thai';
        font-style: normal;
        font-weight: 600;
        font-size: 18px;
        line-height: 144%;
        color: #FFFFFF;
        Width: 182.5px;
        Height: 52.63px;
    }
</style>

    <NavbarLoginAdmin ShortToken=@shortToken PageCode="@codeName"></NavbarLoginAdmin>

<MediaStyle></MediaStyle>
<form @onsubmit=OnSaveBanner>
    <div class="bg-color pt-5 pb-5 ">
        <div class="container">
            <div class="card-main">
                <div class="card-title">
                    <p class="f-title">เพิ่มเเบนเนอร์</p>
                </div>
                <div class="row pt-5 txth-from-reg">
                    <div class="col-12">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 col-lg-6 col-xl-6 mb-4">
                                    <label class="form-label float-start" for="">ชื่อแบนเนอร์</label>
                                    <p class="float-start" style="color:red">*</p>
                                    <input type="text" id="BannerName" class="form-control form-control-lg" @bind="@BannerName" required />

                                </div>
                                <div class="col-md-12 col-lg-6 col-xl-6 mb-4">
                                    <label class="form-label float-start" for="" style="padding-bottom: 6px;">URL</label>
                                    <input type="text" id="Url" class="form-control form-control-lg" @bind="@Url" />
                                </div>
                             
                                <div class="col-md-12 col-lg-6 col-xl-6 mb-4">
                                     <label class="form-label float-start" for="">วันที่สร้าง</label>
                                     <p class="float-start" style="color:red">*</p>

                                    <AntDesign.DatePicker @bind-Value="@CreateDate" Format="dd/MM/yyyy" Style="width: 100%; height: 3rem;" />
                                </div>
                               
                             
                            <div class="col-md-12 col-lg-6 col-xl-6 mb-4">
                                <div class="d-flex flex-row pb-2">
                                <p class="sub-title">สถานะประกาศ</p>
                                <p class="float-start" style="color:red">*</p>
                                </div>
                                <div class="d-flex flex-row pb-2">
                                    <div class="form-check d-flex align-items-center px-4">

                                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" @onchange="@(() => StatusAnnounce = 1)">
                                        <label class="form-check-label txt-check pt-2" for="flexRadioDefault1">
                                            &nbsp; ลงประกาศ
                                        </label>
                                    </div>
                                    <div class="form-check d-flex align-items-center px-4">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" @onchange="@(() => StatusAnnounce = 0)" checked>
                                        <label class="form-check-label txt-check pt-2" for="flexRadioDefault1">
                                            &nbsp; ไม่ลงประกาศ
                                        </label>
                                    </div>
                                </div>
                            </div>

                                <div class="d-flex align-items-center mx-5 px-3">
                                    @if (FileName != "")
                                    {
                                        <a href="@ImageUri" @onclick="@(() => IsAlert(ImageUri.Contains("https:")?false : true))" target="@(ImageUri.Contains("https:")?"_blank" : "")">@FileName</a>
                                        @if (xmark == true)
                                        {
                                            <div @onclick="@isClose" class="px-2" style="color:red;cursor:pointer"><i class="fa-solid fa-circle-xmark"></i></div>
                                        }
                                    }
                                    else
                                    {
                                        <div></div>
                                    }
                                </div>
                            </div>
                            <div class="container banner-box-upload">
                                <div class="d-flex justify-content-center align-item-center ">
                                    <div class="div-file-input">
                                        <InputFile class="custom-input-file" style="cursor:pointer;" OnChange="@LoadImage" multiple />
                                        @if (FileName != "")
                                        {
                                            <img class="img-upload" src="@ImageUri" />
                                        }
                                        else
                                        {
                                            <div class="d-flex flex-column align-items-center">
                                                <div style="font-size: 40px;text-align:center;">
                                                    <i class="fa-solid fa-arrow-up-from-bracket"></i>
                                                </div>
                                                <div class="m-2" style="font-size: 40px;">
                                                    <p class="txt-upload m-1">วางไฟล์ที่นี่เพื่ออัปโหลด</p>
                                                </div>
                                                <button class="btn btn-primary btn-edit m-1">
                                                    <i class="fa-regular fa-floppy-disk"></i> อัปโหลด
                                                </button>
                                                <div class="m-2 d-flex flex-column align-items-center" style="font-size: 30px;">
                                                    <div class="txt-upload m-1">(อัพโหลดไฟล์ ได้เฉพาะ .jpg และ .png เท่านั้น ขนาดไฟล์ 5 MB)</div>
                                                    <div class="txt-upload m-1">(ขนาด 970 x 250 Pixel)</div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                            </div>

                            <div class="d-flex justify-content-end my-4">
                                <div class="mt-4 pt-2">
                                    <button class="btn btn-outline-secondary btn-r-s" @onclick=OnGoBackToTableList>
                                        <i class="fa-regular fa-circle-xmark"></i> &nbsp;ย้อนกลับ
                                    </button>
                                </div>
                                &nbsp;&nbsp;
                                <div class="mt-4 pt-2">
                                    <button class="btn btn-primary btn-l-s" type="submit">
                                        <i class="fa-regular fa-floppy-disk"></i>&nbsp; บันทึก
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<Footer></Footer>
@code {

    [Parameter]
    [SupplyParameterFromQuery(Name = "token")]
    public string? shortToken { get; set; } = "";

    public IBrowserFile bannerFile;
    public string FileName = "";
    public string ImageUri = "";
    public string imgpreview = "";
    public ResponseUpload responseUpload { get; set; }

    //Binding Data
    public string BannerName = "";
    public string Url = "";
    public DateTime CreateDate =DateTime.Now;
    public int StatusAnnounce;
    public string? env = ConfigureCore.ConfigENV;

    public List<BannerT>? bannerDataTCheck { get; set; }
    public List<BannerT>? CheckBanner3 { get; set; }
    public string? prefix;
    public string? codeName = "DSP0502";

    protected override async Task OnInitializedAsync()
    {
        bannerDataTCheck = await bannerService.GetBannersT();
        CheckBanner3 = (from x in bannerDataTCheck where x.StatusAnnounce == 1 select x).ToList();
        if (env == "Development")
        {
            prefix = "";
        }
        else
        {
            prefix = "/admin";
        }
        StateHasChanged();
    }

    private async Task OnCreateDateSelected(DateTime e)
    {
        CreateDate = e.ToLocalTime();

    }

    private async void OnSaveBanner()
    {
        if (StatusAnnounce==1 &&CheckBanner3.Count >= 3)
        {
            await Swal.FireAsync(
          "ไม่สามารถบันทึกได้เนื่องจากมีประกาศเกินกว่ากำหนด",
          null,
          SweetAlertIcon.Error
            );
            Navigation.NavigateTo($"{prefix}/banner?token={shortToken}");
        }
        else
        {

            RequestBannerT bannerT = new RequestBannerT()
            {
                BannerName = BannerName,
                CreateDate = CreateDate,
                StatusAnnounce = StatusAnnounce,
                Url = Url,
                File = bannerFile
            };

            var response = await bannerService.AddBannerT(bannerT);
            if (response.issucessStatus == true)
            {
                await Swal.FireAsync(
                     "บันทึกข้อมูลสำเร็จ",
                     null,
                     SweetAlertIcon.Success
            );
                Navigation.NavigateTo($"{prefix}/banner?token={shortToken}");
            }
            else
            {
                await Swal.FireAsync(
                 "บันทึกข้อมูลไม่สำเร็จ",
                 null,
                 SweetAlertIcon.Error
        );
                Navigation.NavigateTo($"{prefix}/banner?token={shortToken}");
            }
        }

    }

    public void OnGoBackToTableList()
    {
        Navigation.NavigateTo($"{prefix}/banner?token={shortToken}");
    }



    public async Task LoadImage(InputFileChangeEventArgs inputFileChangeEventArgs)
    {
        if (inputFileChangeEventArgs.File.Size > 5242880)
        {
            await Swal.FireAsync(
                  "ไฟล์ใหญ่เกินไป !!",
                  null,
                  SweetAlertIcon.Error
                  );
        }
        else if (inputFileChangeEventArgs.File.ContentType != "image/jpeg" && inputFileChangeEventArgs.File.ContentType != "image/jpg" && inputFileChangeEventArgs.File.ContentType != "image/png")
        {
            await Swal.FireAsync(
               "สามารถอัพโหลดไฟล์ ได้เฉพาะ .jpg และ .png เท่านั้น",
               null,
               SweetAlertIcon.Warning
               );
        }
        else
        {
        xmark = true;
        FileName = inputFileChangeEventArgs.File.Name;
        bannerFile = inputFileChangeEventArgs.File;
        var image = await inputFileChangeEventArgs.File.RequestImageFileAsync("image/png", 600, 600);
        using Stream imageStream = image.OpenReadStream(1024 * 1024 * 10);
        using MemoryStream ms = new();
        await imageStream.CopyToAsync(ms);
        ImageUri = $"data:image/png;base64,{Convert.ToBase64String(ms.ToArray())}";
        StateHasChanged();    
        }
    }
    private bool xmark;
    public void isClose()
    {
        xmark = false;
        FileName = "";
        StateHasChanged();
    }
    public async void IsAlert(bool status)
    {
        if (status)
        {
            await Swal.FireAsync(
               " ไม่สามารถคลิกดูรายละเอียด เนื้อไฟล์ได้ เนื่องจากยังไม่ได้บันทึกข้อมูล !",
               null,
               SweetAlertIcon.Warning
               );
        }
    }
}
