                            <div @onclick="()=>clickmenu(7)" class="list-g list-group-item-action  d-flex align-items-center" id="seven" data-bs-toggle="list" role="tab">
                                &nbsp; แพทย์ Audit
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div @onclick="()=>clickmenu(8)" class="list-group-item list-group-item-action  d-flex align-items-center"
                 id="list-settings-list" data-bs-toggle="list" role="tab">
                <i class="fa-solid fa-gears fa-xl"></i>&nbsp; ตั้งค่าระบบ
            </div>

        </div>
    </div>

</div>
@code {
    [Parameter]
    public EventCallback<int> Clickmenu { get; set; }


    public async void clickmenu(int id)
    {
        await this.Clickmenu.InvokeAsync(id);
    }
}

