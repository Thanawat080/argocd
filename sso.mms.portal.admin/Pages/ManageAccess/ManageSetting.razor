</style>

<div class="container">
    <div class="MA-headder">
        <div class="MA-title p-3">
            ตั้งค่าระบบ
        </div>
    </div>
    <div class="MA-body">
        <div class="container">
            <div class="py-4">
                <div class="row d-flex justify-content-end align-content-center">
                    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                        <div class="input-group">
                            <input type="search" class="form-control" style="height: 48px;" placeholder="ข้อมูลที่ต้องการค้นหา" aria-label="Search" aria-describedby="search-addon" @bind-value=@text />
                            <button type="button" class="btn btn-outline-primary serch-bg" style="height: 48px;width:48px;" @onclick=@search><i class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <MatTable 
                ShowPaging="false" 
                PageSize=6 
                Items="@settingmListsearch" 
                LoadInitialData="true" 
                Striped="true" 
                RequestApiOnlyOnce="true" 
                AllowSelection="true" 
                RowClass="tester"
                CurrentPage="@currentPage"
 DebounceMilliseconds="150" class="mat-elevation-z5">
                <MatTableHeader>
                    <th class="text-center" style="border-radius:10px 0 0 0;width:150px;">ลำดับ</th>
                    <th class="text-center">Code</th>
                    <th class="text-center" style="width:250px">ตั้งค่าการใช้งาน</th>
                    <th class="text-center" style="width:950px;border-radius:0 10px 0 0 ;">ระบบ</th>

                </MatTableHeader>
                <MatTableRow>
                    <td class="text-center" style="width:150px">@String.Format("{0:d}", settingmListsearch.IndexOf(context) + 1)</td>
                    <td>@context.Code</td>
                    <td style="width:250px">
                            <div class="d-flex justify-content-center align-content-center form-check form-switch">
                            <input class="form-check-input" disabled="@(permit.isRoleUpdate == false ? true : false)" @bind-value="@context.Isactive" type="checkbox" id="flexSwitchCheckChecked" checked="@context.Isactive"><div>
                                    @if (@context.Isactive == true)
                                    {
                                        <div style="color:#67C23A">&nbsp; &nbsp; ใช้งาน</div>
                                    }
                                    else
                                    {
                                        <div style="color:#FF0000">&nbsp; ไม่ใช้งาน</div>
                                    }
                                </div>
                            </div>
                    </td>
                    <td class="text-left" style="width:950px">@context.Name</td>

                </MatTableRow>
            </MatTable>
            <div class="d-flex justify-content-end align-content-center pt-4 pb-4">
                <button class="btn btn-primary btn-save" @onclick="()=>goMsubdetail()">
                    <div class="txt-btn-save">
                        <i class="fa-regular fa-floppy-disk"></i>&nbsp; บันทึก
                    </div>
                </button>
            </div>
        </div>
    </div>
</div>
@if (DialogIsOpen)
{
    <ModalSaveChange OnClose="@OnDialogClose" title="ยืนยันการบันทึกข้อมูลใช่หรือไม่" description="">
    </ModalSaveChange>
}
@if (isloading == true)
{
    <style>body { overflow: hidden; }</style><LoadingPage></LoadingPage>
}
@code {
    public int currentPage = 1;
    public bool isloading = false;
    private bool DialogIsOpen = false;
    [Parameter]
    [SupplyParameterFromQuery(Name = "token")]
    public string? shortToken { get; set; } = "";

    [Parameter]
    public EventCallback<int> Callback { get; set; }
    [Parameter]
    public string MRole { get; set; }

    List<SettingM> settingmList = new List<SettingM>();
    List<SettingM> settingmListsearch = new List<SettingM>();
    public string? text { get; set; } = "";

    public UserRole userRole;
    public MenuPerMit permit = new MenuPerMit();



    protected override async Task OnInitializedAsync()
    {
        isloading = true;

        settingmList = await SettingMService.GetSettingM();
        settingmListsearch = settingmList;
        userRole = await localStorage.GetItemAsync<UserRole>("userRole");
        if (userRole != null && userRole.role != null)
        {
            try
            {
                permit = await userRoleService.GetUserAuth(userRole, "PSMSS002", "PORTAL-SSO");
            }
            catch (Exception ex)
            {
                Console.WriteLine(ex);
            }
        }
        isloading = false;
        StateHasChanged();
    }
    private async Task OnDialogClose(bool isOk)
    {
        if (isOk)
        {
            isloading = true;
            var res = await SettingMService.savesetting(settingmList);
            if (res == "success")
            {
                isloading = false;
                StateHasChanged();
                await Swal.FireAsync(
                    "บันทึกการตั่งค่าสำเร็จ",
                    null,
                    SweetAlertIcon.Success
                    );

                await this.Callback.InvokeAsync(0);
            }
            else
            {
                isloading = false;
                StateHasChanged();
                await Swal.FireAsync(
                    "บันทึกการตั่งค่าผิดพลาด",
                    null,
                    SweetAlertIcon.Error
                    );
                await this.Callback.InvokeAsync(0);
            }
        }
        DialogIsOpen = false;
    }
    public async void search()
    {

        settingmListsearch = settingmList.Where(x => x.Name.ToLower().Contains(text.ToLower())).ToList();
        if (settingmListsearch.Count == 0)
        {
            settingmListsearch = settingmList;
            await Swal.FireAsync(
                    "ไม่พบข้อมูล",
                    null,
                    SweetAlertIcon.Warning
                    );
        }
        currentPage = 1;
        StateHasChanged();
    }

    public async void goMsubdetail()
    {
        DialogIsOpen = true;
        StateHasChanged();
    }

}
