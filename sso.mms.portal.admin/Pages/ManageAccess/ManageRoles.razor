<div class="container">
    <div class="MA-headder">
        <div class="MA-title p-3">
            จัดการบทบาท
        </div>
    </div>
    <div class="MA-body">
        <div class="container">
            <div class="py-4">
                <div class="row d-flex justify-content-between align-content-center">
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div @onclick="()=>goMsubdetail(1)">
                            @if (permit.isRoleCreate == true && permit.isRoleCreate != null)
                            {
                                <button class="btn btn-primary serch-bg btn-wh txt-btn-save"><i class="fa-regular fa-square-plus">&nbsp; เพิ่ม</i></button>
                            }
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                        <div class="input-group">
                            <input type="search" class="form-control" style="height: 48px;" placeholder="ข้อมูลที่ต้องการค้นหา" aria-label="Search" aria-describedby="search-addon" @bind-value=@text />
                            <button type="button" class="btn btn-outline-primary serch-bg" style="height: 48px;width:48px;" @onclick=@search><i class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <MatTable ShowPaging="false" 
                Items="@rolegrouplistsearch" 
                LoadInitialData="true" 
                Striped="true" 
                RequestApiOnlyOnce="true" 
                AllowSelection="true" 
                RowClass="tester"
                DebounceMilliseconds="150" 
                class="mat-elevation-z5"
                      PageSize="@pageSize"
                CurrentPage="@currentPage">
                <MatTableHeader>
                    <th class="text-center" style="border-radius:10px 0 0 0;width:200px;"></th>
                    <th class="text-center" style="width:150px">ลำดับ</th>
                    <th class="text-center" style="width:150px">รหัส</th>
                    <th class="text-center" style="width:650px">ชื่อบทบาท</th>
                    <th class="text-center" style="width:150px;border-radius:0 10px 0 0 ;">สถานะ</th>

                </MatTableHeader>
                <MatTableRow>
                    <td class="text-center" style="width:200px">
                        @if (permit.isRoleUpdate == true && permit.isRoleUpdate != null)
                        {
                            <img src="helper_shared/icon_sso/save.png" data-bs-placement="bottom" title="แก้ไข" style="width:32px;height:32px;" @onclick="@(() => Editrole(context.Id))" />
                        }
                        &nbsp;
                        @if (permit.isRoleDelete == true && permit.isRoleDelete != null)
                        {
                            <img src="helper_shared/icon_sso/delete.png" data-bs-placement="bottom" title="ลบ" style="width:32px;height:32px;" @onclick="@(() => Deleterole(context.Id))" />
                        }
                    </td>
                    <td style="max-width:150px">@String.Format("{0:d}", rolegrouplistsearch.IndexOf(context) + 1)</td>
                    <td style="width:150px">@context.RoleCode</td>
                    <td style="width:650px">@context.Name</td>
                    <td class="text-center" style="width:150px">
                        @if (context.IsStatus == 1)
                        {
                            <a style="color:#67C23A">กำลังใช้งาน</a>
                        }
                        else
                        {
                            <a style="color:#F90909;">ไม่ใช้งาน</a>
                        }
                    </td>

                </MatTableRow>
            </MatTable>

            <AntDesign.Pagination ShowSizeChanger
                                   OnShowSizeChange="@OnShowSizeChange"
                                   OnChange="@OnPage"
                                   DefaultCurrent="3"
                                   PageSize=@pageSize
                                   Total="@rolegrouplistsearch.Count()"
                                   Class="pb-5"
                                   />
        </div>
    </div>

</div>


@if (DialogIsOpen)
{
    <ModalDelete OnClose="@OnDialogClose" title="ต้องการลบข้อมูลใช่หรือไม่" description="">
    </ModalDelete>
}
@if (isloading == true)
{
    <style>body { overflow: hidden; }</style><LoadingPage></LoadingPage>
}


@code {
    private bool DialogIsOpen = false;
    public int iddelete { get; set; }
    [Parameter]
    [SupplyParameterFromQuery(Name = "token")]
    public string? shortToken { get; set; } = "";

    [Parameter]
    public EventCallback<(int, int)> Callback { get; set; }

    [Parameter]
    public string MRole { get; set; }
    List<RoleGroupM> rolegrouplist = new List<RoleGroupM>();
    List<RoleGroupM> rolegrouplistsearch = new List<RoleGroupM>();

    public string? text { get; set; } = "";

    public bool isloading = false;

    public UserRole userRole;
    public MenuPerMit permit = new MenuPerMit();

    int currentPage = 0;
    int pageSize = 5;

    void OnPage(PaginationEventArgs e)
    {

        Console.WriteLine(e);
        pageSize = e.PageSize;
        currentPage = e.Page;
    }


    private void OnShowSizeChange(PaginationEventArgs args)
    {
        var (page, pageSize) = args;
        Console.WriteLine($"{page}, {pageSize}");
    }

    protected override async Task OnInitializedAsync()
    {

        isloading = true;
        rolegrouplist = await ManageMentMenuService.GetRoleGroupByType(MRole);
        rolegrouplistsearch = rolegrouplist.OrderByDescending(e => e.UpdateDate).ToList();


        userRole = await localStorage.GetItemAsync<UserRole>("userRole");
        if (userRole != null && userRole.role != null)
        {
            try
            {
                permit = await userRoleService.GetUserAuth(userRole, "PSMSS002", "PORTAL-SSO");
            }
            catch (Exception ex)
            {
                Console.WriteLine(ex);
            }
        }
        StateHasChanged();
        isloading = false;


    }

    public async void search()
    {

        rolegrouplistsearch = rolegrouplist.Where(x => x.Name.ToLower().Contains(text.ToLower())).ToList();
        if (rolegrouplistsearch.Count == 0)
        {
            rolegrouplistsearch = rolegrouplist;
            await Swal.FireAsync(
                     "ไม่พบข้อมูล",
                     null,
                     SweetAlertIcon.Warning
            );
        }
        currentPage = 1;
        StateHasChanged();
    }
    public async void Editrole(int id)
    {

        await Callback.InvokeAsync((1, id));
    }

    private async Task OnDialogClose(bool isOk)
    {
        if (isOk)
        {
            isloading = true;
            var res = await ManageMentMenuService.delteRoleGruopM(iddelete);
            rolegrouplist = await ManageMentMenuService.GetRoleGroupByType(MRole);
            if (res == "success")
            {
                isloading = false;
                StateHasChanged();
                await Swal.FireAsync(
                    "ลบบทบาทสำเร็จ",
                    null,
                    SweetAlertIcon.Success
                    );

                rolegrouplistsearch = rolegrouplist.Where(x => x.Name.ToLower().Contains(text.ToLower())).ToList();
                StateHasChanged();
            }
            else
            {
                isloading = false;
                StateHasChanged();
                await Swal.FireAsync(
                    "ลบบทบาทไม่สำเร็จ",
                    null,
                    SweetAlertIcon.Error
                    );
                rolegrouplistsearch = rolegrouplist.Where(x => x.Name.ToLower().Contains(text.ToLower())).ToList();
                StateHasChanged();
            }


        }
        DialogIsOpen = false;
    }


    public async void Deleterole(int id)
    {
        iddelete = id;
        DialogIsOpen = true;
        StateHasChanged();
    }


    public async void goMsubdetail(int id)
    {
        await this.Callback.InvokeAsync((1, 0));
    }

}