                    <div class="col-sm-12 col-md-4 mms-txt-headdetail text-md-end">เบอร์โทร</div>
                    <div class="col-sm-12 col-md-8"><Input Placeholder="Basic usage" @bind-Value="@txtValue" /></div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 py-2">
                <div class="row align-items-center  mms-txt-headdetail">
                    <div class="col-sm-12 col-md-7 text-md-end">สัญญาชาติ : ไทย</div>
                    <div class="col-sm-12 col-md-5">เพศ : ชาย</div>
                </div>
            </div>
        </div>
        @if (isChecked)
        {
            <div class="mms-media-end pb-4">
                <AntDesign.Button Type="@AntDesign.ButtonType.Default" Class="ant-btn-default" OnClick="() => _visible = true">
                    <i class=" fa-solid fa-calendar-days"></i>
                    &nbsp; เพิ่มช่วงวันที่จ่ายยา
                </AntDesign.Button>
            </div>
            <AntDesign.Table DataSource="listOfData" TItem="ItemData" Bordered ScrollX="1000">
            <ChildContent Context="data">
                <AntDesign.Column TData="string" Title="ลำดับ" Align="ColumnAlign.Center">@(String.Format("{0:d}", listOfData.IndexOf(data) + 1)) </AntDesign.Column>
                    <AntDesign.Column TData="string" Title="วันที่ทำรายการ" Align="ColumnAlign.Center" Width="15%">@data.AdmitDate</AntDesign.Column>
                    <AntDesign.Column TData="string" Title="วันที่จ่ายยา" Align="ColumnAlign.Center">
                        @{
                            List<string> txtstring = new List<string>();
                            string Takeresult = "";
                            @foreach (DateTime item in data.MedDate)
                            {
                                txtstring.Add(item.Day.ToString());
                            }
                            if (data.MedType == "range")
                            {
                                Takeresult = string.Join("-", txtstring);
                            }
                            else if (data.MedType == "multi")
                            {
                                Takeresult = string.Join(",", txtstring);
                            }

                        }
                        @Takeresult
                    </AntDesign.Column>
                    <AntDesign.Column TData="string" Title="Type ขอเบิก" Align="ColumnAlign.Center">
                        @if (data.PayType == "1")
                        {
                            <div>ยอดเงินรวม</div>
                        }
                        else if (data.PayType == "2")
                        {
                            <div>ยอด / วัน</div>
                        }
                    </AntDesign.Column>
                    <AntDesign.Column TData="string" Title="ยอดเงิน" Align="ColumnAlign.Center">@data.Price</AntDesign.Column>
                    <AntDesign.Column TData="string" Title="ยอดรวม" Align="ColumnAlign.Center">@data.Total</AntDesign.Column>
                    <AntDesign.Column TData="string" Title="ยอดอนุมัติ /วัน" Align="ColumnAlign.Center">35 บาท</AntDesign.Column>
                </ChildContent>
                <PaginationTemplate>
                    <AntDesign.Pagination Class="pt-2"
                                      Total="context.Total"
                                      PageSize="context.PageSize"
                                      Current="context.PageIndex"
                                                                ShowSizeChanger
                                      OnChange="context.HandlePageChange" />
                </PaginationTemplate>
                </AntDesign.Table>
        }

        <div class="mms-media-end mt-5">
            <AntDesign.Button Type="@AntDesign.ButtonType.Default" Class="ant-btn-default" @onclick="() =>Navigate(1)"><i class="fa-solid fa-circle-chevron-left"></i>&nbsp; ย้อนกลับ</AntDesign.Button>
            &nbsp;&nbsp;
            <AntDesign.Button Type="@AntDesign.ButtonType.Primary" OnClick="() => IsSave(true)"><i class="fa-solid fa-floppy-disk"></i>&nbsp;บันทึก</AntDesign.Button>
        </div>
    </div>
</div>


@{
    RenderFragment footer =@<div class="mms-media-end">
        <AntDesign.Button Type="@AntDesign.ButtonType.Primary" @onclick="@HandleOk">ตกลง</AntDesign.Button>
    </div>;
}
<AntDesign.Modal Title="@title"
                 Visible="@_visible"
                 OnOk="@HandleOk"
                 OnCancel="@HandleCancel"
                 Footer="@footer"
                 WrapClassName="modalStyle xmark">

    <div class="container mms-txt-headdetail">

        <AntDesign.RadioGroup @bind-Value="@_value">
            <AntDesign.Radio Value="@("range")">เลือกช่วงวันที่</AntDesign.Radio>
            <AntDesign.Radio Value="@("multi")">เลือกระบุวันที่</AntDesign.Radio>
        </AntDesign.RadioGroup>

        <div class="mms-media-center flex-column my-4">
            @if (_value == "range")
            {
                <Blazorise.DatePicker @bind-Dates="selectedDatesRange" TValue="DateTime?"
                                  Max="maxDate" Min="minDate" InputMode="DateInputMode.Date" SelectionMode="DateInputSelectionMode.Range" Inline DisabledDates="GetDisabledDates()" />
            }
            else
            {
                <Blazorise.DatePicker @bind-Dates="selectedDatesMulti" TValue="DateTime?"
                                  Max="maxDate" Min="minDate" InputMode="DateInputMode.Date" SelectionMode="DateInputSelectionMode.Multiple" Inline DisabledDates="GetDisabledDates()" />
            }
        </div>
        <div class="my-2">
            <AntDesign.RadioGroup @bind-Value="@Sumvalue">
                <AntDesign.Radio Value="@("1")">ยอดรวมทั้งหมด</AntDesign.Radio>
                <AntDesign.Radio Value="@("2")">ยอดเงินรายวัน</AntDesign.Radio>
            </AntDesign.RadioGroup>
        </div>
        <div class="d-flex align-items-center pt-2">
            <div class="pe-2">ยอดเงิน</div>
            <div>
                <AntDesign.Input Placeholder="Basic usage" @bind-Value="@GetPrice"></AntDesign.Input>
            </div>
            <div class="ps-2">บาท</div>
        </div>
    </div>
</AntDesign.Modal>


