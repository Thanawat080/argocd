    private List<DateTime?> disabledDates { get; set; }

    private List<DateTime?> GetDisabledDates()
    {
        List<DateTime?> disabledDates = new List<DateTime?>();
        foreach (var item in listOfData)
        {
            if (item.MedType == "range")
            {
                if (item.MedDate != null && item.MedDate.Count >= 2)
                {
                    DateTime? start = item.MedDate[0];
                    DateTime? end = item.MedDate[1];
                    DateTime? date = start;
                    while (date <= end)
                    {
                        disabledDates.Add(date);
                        if (date.HasValue)
                        {
                            date = date.Value.AddDays(1);
                        }
                        else
                        {
                            break; // Exit the loop if the date is null
                        }
                    }
                }
            }
            else if (item.MedType == "multi")
            {
                foreach (DateTime? datemulti in item.MedDate)
                {
                    disabledDates.Add(datemulti);
                }
            }

        }
        return disabledDates;
