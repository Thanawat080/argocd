                     CardId = "157998956234",
                     MedDate = date,
                     Price = pricePerDay,
                     Total = priceAmount,
                     AdmitDate = DateTime.Now,
                     DischargeDate = DateTime.Now,
                 });
        }
        StateHasChanged();
        selectedDatesRange = null;
        selectedDatesMulti = null;
        _visible = false;
