<div class="site-layout-background" style="padding: 24px;">
    <div class="mms-nav-title">
        <div class="mms-text-title px-4 py-3">ประสบอันตรายหรือเจ็บป่วยฉุกเฉิน 72 ชั่วโมง</div>
    </div>
    <div class="container py-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page">
                    <span class="breadcum-title py-2">บันทึกรายการเบิก</span>
                </li>
                @*                <li class="breadcrumb-item" aria-current="page" style="cursor:pointer;" @onclick="()=> Back(1)">
                <span class="breadcum-sucress py-2">ค้นหา</span>
                </li>*@
                <li class="breadcrumb-item" aria-current="page">
                    <span class="breadcum-process py-2">รายการผู้ใช้บริการ</span>
                </li>
            </ol>
        </nav>
        <hr />
        <div class="row py-4">
            <div class="col-sm-12 col-md-9">
                <Button Type="@ButtonType.Primary"><i class="fa-solid fa-circle-plus"></i> &nbsp; เพิ่ม</Button>
                &nbsp;&nbsp;
                <Button Type="@(selectedRows!=null && selectedRows.Any()?"primary" :"defult" )" Class="mms-text-header" @onclick=@(()=>Confirm(true)) Disabled="@(selectedRows!=null && selectedRows.Any()? false :true )">
                    <i class="fa-solid fa-file-arrow-down"></i> &nbsp;
                    ส่งรายการที่เลือกเพื่อส่งเบิก
                </Button>
            </div>
            <div class="col-sm-12 col-md-3">
                <Space Direction="@DirectionVHType.Vertical" Class="mms-btn-serch w-100">
                    <SpaceItem>
                        <Search Placeholder="ค้นหารายละเอียดผู้ประกันตน" EnterButton="true" />
                    </SpaceItem>
                </Space>
            </div>
        </div>
        <Table DataSource="listOfData" TItem="ItemData" RowClassName="@(_=>"editable-row")" Bordered @bind-SelectedRows="selectedRows" ScrollX="1000">
            <ChildContent Context="data">
                <Selection Width="5%" Key="@data.Id.ToString()" />
                <Column TData="string" Title="ลำดับ" Align="ColumnAlign.Center">@(String.Format("{0:d}", listOfData.IndexOf(data) + 1)) </Column>
                <Column TData="string" Title="เลขประจำตัวประชาชน / หมายเลข Passport" Align="ColumnAlign.Center" Width="15%">@data.CardId</Column>
                <Column TData="string" Title="ชื่อ-นามสกุล" Align="ColumnAlign.Center">@data.Name</Column>
                <Column TData="string" Title="Admit Date" Align="ColumnAlign.Center">@data.AdmitDate</Column>
                <Column TData="string" Title="Discharge Date" Align="ColumnAlign.Center">@data.DischargeDate</Column>
                <Column TData="string" Title="จำนวนชั่วโมงรวม" Align="ColumnAlign.Center">@data.Hours <span class="px-2">ชั่วโมง</span></Column>
                <Column TData="string" Title="จำนานเงิน(บาท)" Align="ColumnAlign.Center">@String.Format("{0:n}",data.Price)</Column>
                <Column TData="string" Title="" Align="ColumnAlign.Center" Width="10%">
                    <img title="เรียกดู" src="helper_shared/PortalAdminImage/eye.png" style="width:24px;height:24px;" @onclick=@(()=>Detail(true)) />
                    <img title="แก้ไข" src="helper_shared/PortalAdminImage/edit.png" style="width:24px;height:24px;" />
                    <img title="ลบ" src="helper_shared/PortalAdminImage/delete.png" style="width:24px;height:24px;" @onclick=@(()=>Delete(true)) />
                </Column>
            </ChildContent>
            <PaginationTemplate>
                <Pagination Class="pt-2"
                            Total="context.Total"
                            PageSize="context.PageSize"
                            Current="context.PageIndex"
                                        ShowSizeChanger
                            OnChange="context.HandlePageChange" />
            </PaginationTemplate>
            </Table>

            <div class="mms-text-gray mms-media-start pt-4">
                หมายเหตุ: กรุณาเลือกรายการเพื่อส่งเบิก
            </div>
        </div>
    </div>

    @using sso.mms.fees.ext.Shared._72Hours.RecordWithdrawal.Modals
    <DetailModel _visible=@OpenModalDetail OnClose="@Detail" />

    <ConfirmModel _visible=@ConfirmModalEdit OnClose="@Confirm" />
    <DeleteModel _visible=@OpenModalDelete OnClose="@Delete" />


    @code {
    [Parameter]
    public EventCallback<int> IndexPage { get; set; }
    IEnumerable<ItemData> selectedRows;
    List<ItemData> listOfData = new List<ItemData>();
    bool _visible = false;

    bool OpenConfirmModel { get; set; }
    bool OpenModalDelete { get; set; }
    bool ConfirmModalEdit { get; set; }
    bool OpenModalDetail { get; set; }

    public void View(bool value)
    {
        OpenConfirmModel = value;
    }
    public void Confirm(bool value)
    {
        ConfirmModalEdit = value;
        if (value == false)
        {
          OpenModalDetail = true;  
        }
    }
    public void Delete(bool value)
    {
        OpenModalDelete = value;
    }
    public void Detail(bool value)
    {
        OpenModalDetail = value;
    }
    /*------------- Navigate Page ---------*/
    public async Task Navigate(int page)
    {
        await IndexPage.InvokeAsync(page);

    }
    /*------------- Navigate Page ---------*/

