@inject NavigationManager NavigationManager
<style>
    .anticon > .anticon {
        line-height: 0;
        vertical-align: 0;
        color: #ffffff !important;
    }

    .head-title {
        color: #334396;
        font-feature-settings: 'clig' off, 'liga' off;
        font-family: Noto Sans Thai;
        font-size: 16px;
        font-style: normal;
        font-weight: 600;
        line-height: 150%; /* 24px */
        width: 25%;
        text-align: end;
        margin-right: 5px;
    }

    .moonflower {
        color: red;
    }

</style>

<Modal Title="@_title"
       Visible="@_visible"
       OnOk="@HandleOk"
       OnCancel="@HandleCancel"
       Footer="null"
       Width="1000">

    <div class="container-fluid">
        <div class="d-flex mb-5">
            <p class="head-title">รหัส claim<span class="moonflower">*</span></p>
            <Input Placeholder="ระบุรหัส claim" @bind-Value="@txtValue" />
            <p class="head-title">จำนวน<span class="moonflower">*</span></p>
            <Input Placeholder="ระบุประเภท" @bind-Value="@txtValue" />
            <span></span>
        </div>

        <div class="d-flex">
            <div class="d-flex w-100">
                <p class="head-title">ชื่อ claim<span class="moonflower">*</span></p>
                <Input Placeholder="ระบุชื่อ claim" @bind-Value="@txtValue" />
            </div>
            <div class="d-flex w-100">
                <p class="head-title">จำนวน<span class="moonflower">*</span></p>
                <Input Placeholder="ระบุวงเงิน" @bind-Value="@txtValue" style="padding-right:1px" />
                <span class="head-title">บาท</span>
            </div>
        </div>

    </div>



    <div class="d-flex justify-content-end my-4 mt-4">
        &nbsp;&nbsp;
        <div class="mt-4 pt-2">
            <Button Class="bg-white btn btn-outline-primary " Style="color: #334396; border-color: #334396;">
                <Icon Type="close-circle" Theme="outline" /> &nbsp; ยกเลิก
            </Button>
        </div>
        <div class="mt-4 pt-2">
            <Button Type="@ButtonType.Primary"><i class="fa-solid fa-floppy-disk"></i> &nbsp; บันทึก</Button>
        </div>
    </div>
</Modal>

@code {

    [Parameter]
    public bool _visible { get; set; }

    [Parameter]
    public string _title { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    string txtValue { get; set; }
    /* modal */
    bool _loading = false;

    int _value = 1;

    private void ShowModal()
    {
        _visible = true;
    }

    private void HandleOk(MouseEventArgs e)
    {
        _loading = false;
        OnClose.InvokeAsync(false);
    }

    private void HandleCancel(MouseEventArgs e)
    {
        _loading = false;
        OnClose.InvokeAsync(false);
    }

    void OnChange(string value)
    {
        Console.WriteLine(value);
    }

}
