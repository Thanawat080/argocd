                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end my-4 mt-4">
        &nbsp;&nbsp;
        <div class="mt-4 pt-2">
            <Button Class="bg-white btn btn-outline-primary " Style="color: #334396; border-color: #334396;">
                <Icon Type="close-circle" Theme="outline" /> &nbsp; ยกเลิก
            </Button>
        </div>
        <div class="mt-4 pt-2">
            <Button Type="@ButtonType.Primary"><i class="fa-solid fa-floppy-disk"></i> &nbsp; บันทึก</Button>
        </div>
    </div>
</Modal>

@code {

    [Parameter]
    public bool _visible { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    string txtValue { get; set; }
    /* modal */
    bool _loading = false;

    int _value = 1;

    private void ShowModal()
    {
        _visible = true;
    }

    private void HandleOk(MouseEventArgs e)
    {
        _loading = false;
        OnClose.InvokeAsync(false);
    }

    private void HandleCancel(MouseEventArgs e)
    {
        _loading = false;
        OnClose.InvokeAsync(false);
    }

    void OnChange(string value)
    {
        Console.WriteLine(value);
    }

}
