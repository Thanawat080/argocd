<Modal Title="รายละเอียดข้อมูล"
       Visible="@_visible"
       OnOk="@HandleOk"
       OnCancel="@HandleCancel"
       WrapClassName="xmark"
       Footer="@footer"
       Width="1350">

    <div class="container py-4">
        <Table DefaultExpandAllRows DataSource="data" RowSelectable="@(x =>x.HosStatus == false ? false : true)" TreeChildren="item=>item.Children" Bordered Class="overflow-hidden">

            @if (context.HosStatus == false)
            {
                <PropertyColumn Property="c=>c.Id" Title="ลำดับ" ColSpan="@GetColSpan(context.HosStatus)" Style="@GetColColor(context.HosStatus)" />
            }
            <PropertyColumn Property="c=>c.Name" Title="เลขใบคำสั่งจ่าย" Align="ColumnAlign.Left" ColSpan="@GetColSpan(context.HosStatus,"name",context.Hos)" Style="@GetColColor(context.HosStatus, "name")" />

            <PropertyColumn Property="c=>c.Date" Title="เลขประจำตัวประชาชน" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus)" Style="@GetColColor(context.HosStatus )" />
            <PropertyColumn Property="c=>c.Date" Title="ชื่อ-นามสกุล" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus ,context.Hos)" Style="@GetColColor(context.HosStatus)" />
            <PropertyColumn Property="c=>c.Age" Title="Admit Date" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus ,context.Hos)" Style="@GetColColor(context.HosStatus)" />
            <PropertyColumn Property="c=>c.Age" Title="Discharge Date" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus ,context.Hos)" Style="@GetColColor(context.HosStatus)" />
            <PropertyColumn Property="c=>c.Servicetype" Title="สถานพยาบาลอนุมัติสิทธิ" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus ,context.Hos)" Style="@GetColColor(context.HosStatus)" />
            <PropertyColumn Property="c=>c.money" Title="จำนวนเงิน" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus ,context.Hos)" Style="@GetColColor(context.HosStatus)">
                @String.Format("{0:n}",context.money)
            </PropertyColumn>
            <PropertyColumn Property="c=>c.istatus" Title="วินิจฉัย" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus,context.Hos)" Style="@GetColColor(context.HosStatus)">
                @if (context.istatus == true)
                {
                    <span style="color:green"><span class="status-color-green me-2"></span>จ่ายแล้ว</span>
                }
                else
                {
                    <span style="color:orangered"><span class="status-color-orangered me-2"></span>ยังไม่ชำระ</span>
                }
            </PropertyColumn>
            <PropertyColumn Property="c=>c.istatus" Title="" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus,context.Hos)" Style="@GetColColor(context.HosStatus)">
                <img class="mx-2" title="เรียกดู" src="helper_shared/PortalAdminImage/eye.png" style="width:24px;height:24px; cursor:pointer;" />
            </PropertyColumn>
            @{
                var sum = 0;
                var count = 0;
                foreach (var item in data)
                {
                    sum += CalculateTotalChildrenAge(item.Children.ToList());
                    count = item.Children.Count;
                }
            }
            <SummaryRow>
                <SummaryCell ColSpan="7" Align="ColumnAlign.Center">รวมทั้งหมด</SummaryCell>
                <SummaryCell Align="ColumnAlign.Center" ColSpan="3">
                    <Text>@String.Format("{0:n}",sum)</Text>
                </SummaryCell>
            </SummaryRow>
        </Table>
    </div>
</Modal>
