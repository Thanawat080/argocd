                    <PropertyColumn Property="c=>c.Age" Title="HN/AN" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus ,context.Key)" Width="10%" Style="@GetColColor(context.HosStatus)" />
                    <PropertyColumn Property="c=>c.Age" Title="สถานะ" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus ,context.Key)" Width="10%" Style="@GetColColor(context.HosStatus)" />
                    
                
