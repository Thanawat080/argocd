                    <PropertyColumn Property="c=>c.Name" Title="เลขที่คำสั่งจ่าย" Align="ColumnAlign.Center" ColSpan="@GetColSpan(context.HosStatus)" Width="10%" Style="@GetColColor(context.HosStatus)" />
