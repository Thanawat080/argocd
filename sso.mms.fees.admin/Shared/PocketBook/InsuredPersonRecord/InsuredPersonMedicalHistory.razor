</div>
<hr>

<Table DataSource="data" OnChange="OnChange" TItem="Data" HidePagination Bordered>
    <PropertyColumn Title="ลำดับ" Property="c=>c.No" />
    <PropertyColumn Title="รายละเอียดการรักษา" Property="c=>c.DetailMedical" />
    <PropertyColumn Title="ประเภทการรักษา" Property="c=>c.TypeMedical" />
    <PropertyColumn Title="สถานพยาบาล" Property="c=>c.HospitalName" />
    <PropertyColumn Title="วันที่เริ่ม" Property="c=>c.StartDate" />
    <PropertyColumn Title="วันที่สิ้นสุด" Property="c=>c.EndDate" />
    <PropertyColumn Title="สถานะ" Property="c=>c.Status" />
</Table>


@code {

    public record Data(
        string No,
        string DetailMedical,
        string TypeMedical,
        string HospitalName,
