
<style>
    .text-lable-medical-history {
        width: 135px;
        display: flex;
        align-items: center;
        justify-content: end;
        color: #334396;
        font-size: 16px;
        font-weight:bold;
        padding-right: 5px;
    }
</style>

<div class="d-flex justify-content-center pt-5">
    <div class="text-lable-medical-history">ช่วงวันที่ :</div>
    <DatePicker TValue="DateTime?" Picker="@DatePickerType.Date" Style="width: 226px;" />
    <div class="text-lable-medical-history">ถึง :</div>
