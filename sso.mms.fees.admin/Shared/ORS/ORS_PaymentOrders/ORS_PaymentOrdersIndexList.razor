
<div class="site-layout-background" style="padding: 24px;">
    <div class="mms-nav-title">
        <div class="mms-text-title px-4 py-3"> ค่าบริการทางการแพทย์ประเภทผู้ป่วยในด้วยโรคที่มีค่าใช้จ่ายสูงเกินปกติ (ORS)</div>
    </div>

    <div class="container py-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page">
                    <span class="breadcum-process py-2">รายการใบคำสั่งจ่าย</span>
                </li>
            </ol>
        </nav>
        <hr />
        <div class="py-4">
            <div class="row">
                <div class="d-flex  mms-media-center">
                    <div class="col-4 mms-media-start">
                        <div class="">
                        </div>
                    </div>
                    <div class="col-4 mms-media-end">
                        <Button Type="@ButtonType.Primary" Class="mms-text-header" Disabled="@(selectedRows == null || selectedRows.Count() == 0 ? true: false)">
                            <i class="fa-solid fa-file-arrow-down"></i>
                            อนุมัติรายการจ่าย
                        </Button>
                    </div>
                    <div class="col-4 ">
                        <Space Direction="@DirectionVHType.Vertical" Class="mms-btn-serch  col-12">
                            <SpaceItem>
                                <Search Placeholder="ข้อมูลที่ต้องการค้นหา" EnterButton="true" />
                            </SpaceItem>
                        </Space>
                    </div>
                </div>
            </div>
            <Table  DataSource="data" @bind-SelectedRows="selectedRows" Bordered ScrollX="1000">
                   
                <Selection Key="@context.Id" Type="checkbox" />
                     <PropertyColumn Property="c=>c.Id" Title="ลำดับ" Align="ColumnAlign.Center" Width="10%" >
                         @String.Format("{0:d}", data.IndexOf(context)+1)
                     </PropertyColumn>
                <PropertyColumn Property="c=>c.Key" Title="งวดที่" Align="ColumnAlign.Center" />
                <PropertyColumn Property="c=>c.Name" Title="เลขชุดคำสั่งจ่าย" Align="ColumnAlign.Center" />
                <PropertyColumn Property="c=>c.HosCode" Title="จำนวนรายการ" Align="ColumnAlign.Center" />
                <PropertyColumn Property="c=>c.HosName" Title="ยอดการเบิกรวม " Align="ColumnAlign.Center" />
                <PropertyColumn Property="c=>c.Status" Title="สถานะ" Align="ColumnAlign.Left">
                        
                         @if (context.Status == "1")
                    {
                        <span style="color:orangered"><span class="status-color-orangered me-2"></span>รออนุมัติ</span>
                    }
                    else if (context.Status == "2")
                    {
                        <span style="color:green"><span class="status-color-green me-2"></span>อนุมัติแล้ว</span>
                    }
                </PropertyColumn>

                <PropertyColumn Property="c=>c.Id" Title="" Align="ColumnAlign.Center">
                       @if (context.Status == "2")
                    {
                    <img class="mx-2" title="ดู" src="helper_shared/PortalAdminImage/eye.png"
                         style="width:24px;height:24px; cursor:pointer;" />
                    }
                    else if (context.Status == "1")
                    {
                    <img class="mx-2" title="ดู" src="helper_shared/PortalAdminImage/edit.png"
                         style="width:24px;height:24px; cursor:pointer;" @onclick="@(()=> Indexpage(2,context.Key))" />
                    }
                </PropertyColumn>


            </Table>
        </div>
    </div>
</div>

@if (isloading == true)
{
    <style>
        body {
            overflow: hidden;
        }
    </style>

    <LoadingPage></LoadingPage>
}

