                <Radio Value="1">อนุมัติ</Radio>
                <Radio Value="2">ไม่อนุมัติ</Radio>
            </RadioGroup>
        </div>
        <div class="col-sm-12 col-md-8 d-flex">
            <label class="mms-txt-headdetail">หมายเหตุ <span class="star-comment">*</span></label>
            <TextArea Rows="4" />
        </div>
    </div>
    <div class="mms-media-end">
        <Button Class="ant-btn-distable" @onclick="@HandleCancel"><i class="fa-solid fa-circle-xmark"></i>&nbsp; ยกเลิก</Button>&nbsp;
        <Button Type="@ButtonType.Primary"><i class="fa-solid fa-floppy-disk"></i> &nbsp; บันทึก</Button>
    </div>
</Modal>

@code {
    [Parameter]
    public EventCallback<int> IndexPage { get; set; }

    [Parameter]
    public bool _visible { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    string txtValue { get; set; }

    /* modal */
    bool _loading = false;

    private void ShowModal()
    {
        _visible = true;
    }

    private void HandleOk(MouseEventArgs e)
    {
        _loading = false;
        OnClose.InvokeAsync(false);
    }

    private void HandleCancel(MouseEventArgs e)
    {
        _loading = false;
        OnClose.InvokeAsync(false);
    }
    /*-- chack diagnosis --*/
    int diagnosis = 1;
}
