@using sso.mms.fees.admin.Shared.Hemodialysis.SearchHospital.Modals

<div class="site-layout-background" style="padding: 24px;">
    <div class="mms-nav-title">
        <div class="mms-text-title px-4 py-3">ค่าบริการทางการแพทย์ กรณีโรคติดเชื้อไวรัสโคโรน่า 2019 (โรคโควิด 19)</div>
    </div>
    <div class="container py-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page">
                    <span class="breadcum-sucress py-2">สืบค้นข้อมูลผู้ประกันตน</span>
                </li>
                <li class="breadcrumb-item" aria-current="page">
                    <span class="breadcum-process py-2">ค้นหาข้อมูลสถานพยาบาล</span>
                </li>
            </ol>
        </nav>
        <hr />
        <div class="mms-media-start py-2">
            <div class="text-md-end me-2 mms-txt-headdetail">รหัส / ชื่อสถานพยาบาล :</div>
            <div class="mms-txt-default">123467890xxx โรงพยาบาลสระบุรี</div>
        </div>
        <div class="mms-media-start py-2">
            <div class="text-md-end me-2 mms-txt-headdetail">ช่วงเวลา :</div>
            <div class="d-flex mms-txt-default">
                <div>01/09/2566</div>
                <div class="px-2">ถึง</div>
                <div>30/09/2566</div>
            </div>
        </div>
        <Table DataSource="listOfData" TItem="Data" RowClassName="@(_=>"editable-row")" Bordered>
            <ChildContent Context="data">
                <Column TData="string" Title="ลำดับ" Align="ColumnAlign.Center" Style="width:4%;">@(String.Format("{0:d}", listOfData.IndexOf(data) + 1)) </Column>
                <Column TData="string" Title="งวด" Align="ColumnAlign.Center">@data.Key</Column>
                <Column TData="string" Title="เลขชุดคำสั่งจ่าย" Align="ColumnAlign.Center">@data.Address</Column>
                <Column TData="string" Title="เลขใบคำสั่งจ่าย" Align="ColumnAlign.Center">@data.Date</Column>
                <Column TData="string" Title="จำนวนผู้ประกันตน" Align="ColumnAlign.Center">@data.Date</Column>
                <Column TData="string" Title="ค่าฟอกเลือด" Align="ColumnAlign.Center">@data.Price</Column>
                <Column TData="string" Title="ค่ายา Epo" Align="ColumnAlign.Center">@data.Price</Column>
                <Column TData="string" Title="จำนวนเงินรวม" Align="ColumnAlign.Center">@data.Price</Column>
                <Column TData="string" Title="สถานะ" Align="ColumnAlign.Left" Style="width:10%;">
                    @if (data.Status)
                    {
                        <div style="color:green"><span class="status-color-green me-2"></span>อนุมัติ</div>
                    }
                    else if (data.Status)
                    {
                        <div style="color:black"><span class="status-color-black me-2"></span>ไม่มีคำขอเบิก</div>
                    }
                    else if (data.Status)
                    {
                        <div style="color:darkblue"><span class="status-color-darkblue me-2"></span>มีสิทธิ</div>
                    }
                    else if (data.Status)
                    {
                        <div style="color:orange"><span class="status-color-orangered me-2"></span>รับเรื่อง</div>
                    }
                    else if (data.Status)
                    {
                        <div style="color:red"><span class="status-color-red me-2"></span>ไม่มีสิทธิ</div>
                    }
                    else if (data.Status)
                    {
                        <div style="color:rebeccapurple"><span class="status-color-rebeccapurple me-2"></span>รอจ่าย</div>
                    }
                    else if (data.Status)
                    {
                        <div style="color:lightsalmon"><span class="status-color-lightsalmon me-2"></span>จ่ายเเล้ว</div>
                    }
                </Column>
                <ActionColumn Title="" Align="ColumnAlign.Center" Style="width:4%;">
                    <img src="helper_shared/PortalAdminImage/eye.png" style="width:24px;height:24px; cursor:pointer;"
                         @onclick=@(()=>OpenViewDataModal(true)) />
                </ActionColumn>
            </ChildContent>
        </Table>
        <div class="mms-media-start mt-5">
            <Button Class="ant-btn-distable" @onclick=@(() => goBack(1))><i class="fa-solid fa-circle-chevron-left"></i> &nbsp; ย้อนกลับ</Button>
        </div>
    </div>
</div>

