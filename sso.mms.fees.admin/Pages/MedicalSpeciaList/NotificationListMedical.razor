        <NotificationListMedicalIndex IndexPage="Indexpage"></NotificationListMedicalIndex>
    }
    else if (usepageBookHealthCheckup == 2)
    {
        <NotificationTypeOfTreatment IndexPage="Indexpage"></NotificationTypeOfTreatment>
    }
    else if (usepageBookHealthCheckup == 3)
    {
        <NotificationPeriod IndexPage="Indexpage"></NotificationPeriod>
