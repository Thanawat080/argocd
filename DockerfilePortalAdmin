FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["./sso.mms.portal.admin/sso.mms.portal.admin.csproj", "sso.mms.portal.admin/"]
RUN dotnet restore "sso.mms.portal.admin/sso.mms.portal.admin.csproj"
COPY . .
WORKDIR "/src/sso.mms.portal.admin"
RUN dotnet build "./sso.mms.portal.admin.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "./sso.mms.portal.admin.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "sso.mms.portal.admin.dll"]
