@inject IJSRuntime JSRuntime

<style>
    .card-header-m {
        background: #FFCC41;
        border: 0px solid #FFCC41;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.1);
        border-radius: 10px 10px 0px 0px;
        width: auto;
        height: auto;
        left: 75px;
        top: 797px;
    }

    .text-header-m {
        font-style: normal;
        font-weight: 600;
        font-size: 32px;
        line-height: 150%;
        letter-spacing: -0.019em;
        color: #334396;
        margin: 14px;
    }

    .card {
        border: 0px solid rgba(0,0,0,.125);
    }

    .card-body-m {
        width: auto;
        background: #FFF8E3;
        margin: 14px;
    }

    @@media screen and (max-width: 391px) {
        .m-s-y {
            margin-left: 0.5rem;
            margin-right: 0.5rem;
            margin-bottom: 1rem;
            margin-top: 1rem;
        }
    }

    .btn-outline-primary {
        --bs-btn-color: #f8f8f7;
        --bs-btn-border-color: #f8f8f7;
        --bs-btn-hover-color: #fff;
        --bs-btn-hover-bg: #f8f8f7;
        --bs-btn-hover-border-color: #e0e0e0;
        --bs-btn-focus-shadow-rgb: 13,110,253;
        --bs-btn-active-color: #fff;
        --bs-btn-active-bg: #ffffff;
        --bs-btn-active-border-color: #334396;
        --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
        --bs-btn-disabled-color: #334396;
        --bs-btn-disabled-bg: transparent;
        --bs-btn-disabled-border-color: #334396;
        --bs-gradient: none;
    }
</style>

<div class="btn-group m-3" role="group" aria-label="">
    <button type="button" class="btn b-btn btn-outline-primary button-box" style="padding:inherit;" @onclick="@GotoMenu">
        <img src="@ImagePath" style="width:60px;height:60px;" />
        <div style="padding-left: 5px;white-space: pre-line;" class="text-color-custom fw-bold">@DetailImagePath</div>
        </button>
</div>

@code {


    [Parameter]
    public EventCallback<bool> OnClickPromoteHealt { get; set; }

    [Parameter]
    public string? ImagePath { get; set; }
    [Parameter]
    public string? DetailImagePath { get; set; }
    [Parameter]
    public string? Width { get; set; }
    [Parameter]
    public string? Height { get; set; }
    [Parameter]
    public string? Path { get; set; }
    [Parameter]
    public string? MenuCode { get; set; }

    [Parameter]
    public EventCallback<string> OnClickToMenu { get; set; }

    [Parameter]
    public string? shortToken { get; set; }


    public async Task GotoMenu()

    {
        if (MenuCode == "PHMS008")
        {
            await this.OnClickPromoteHealt.InvokeAsync(true);
        }else
        {
            await JSRuntime.InvokeVoidAsync("open", "http://192.2.200.183:10000/MmsWeb/Login/hosHospital" + $"?token={shortToken}", "_blank");
            Console.WriteLine(MenuCode);
        }

    }

}